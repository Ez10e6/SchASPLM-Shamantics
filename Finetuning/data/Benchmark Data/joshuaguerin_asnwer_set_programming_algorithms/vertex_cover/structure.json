{
  "instance_template": "node(1..5). edge(1,2). edge(2,3). edge(3,4). edge(4,5).",
  "generator": "{ cover(X) : node(X) }. edge(Y,X) :- edge(X,Y).",
  "hard_constraints": [
    {
      "description": "Edge must have covered node.",
      "asp_rule": ":- edge(X,Y), not cover(X), not cover(Y)."
    }
  ],
  "soft_constraints": [
    {
      "description": "Minimize cover size.",
      "asp_rule": "penalty(\"node_included\", X, 1) :- cover(X)."
    }
  ],
  "global_objective": "#minimize { C,X,N : penalty(N,X,C) }."
}