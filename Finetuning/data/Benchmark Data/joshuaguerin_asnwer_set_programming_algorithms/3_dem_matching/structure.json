{
  "instance_template": "x(1..3). y(4..6). z(7..9). target(15).",
  "generator": "{ solution(X,Y,Z) : x(X), y(Y), z(Z) }.",
  "hard_constraints": [
    {
      "description": "Each element in X used exactly once.",
      "asp_rule": ":- x(X), #count{ Y,Z : solution(X,Y,Z) } != 1."
    },
    {
      "description": "Each element in Y used exactly once.",
      "asp_rule": ":- y(Y), #count{ X,Z : solution(X,Y,Z) } != 1."
    },
    {
      "description": "Each element in Z used exactly once.",
      "asp_rule": ":- z(Z), #count{ X,Y : solution(X,Y,Z) } != 1."
    },
    {
      "description": "Triple sum must equal target.",
      "asp_rule": ":- solution(X,Y,Z), target(N), X+Y+Z != N."
    }
  ],
  "soft_constraints": [],
  "global_objective": null
}