{
  "instance_template": "session(1..4). topic(\"Networking\"; \"Security\"). room(1..2). slot(\"morning\"; \"afternoon\").",
  "generator": "1 { topicOf(S, T) : topic(T) } 1 :- session(S). 1 { scheduled(S, R, Sl) : room(R), slot(Sl) } 1 :- session(S).",
  "hard_constraints": [
    {
      "description": "Single session per room-slot.",
      "asp_rule": ":- scheduled(S1, R, Sl), scheduled(S2, R, Sl), S1 < S2."
    },
    {
      "description": "Security sessions: afternoon only.",
      "asp_rule": ":- topicOf(S, \"Security\"), scheduled(S, _, Sl), Sl != \"afternoon\"."
    },
    {
      "description": "Networking sessions: room 1 prohibited.",
      "asp_rule": ":- topicOf(S, \"Networking\"), scheduled(S, 1, _)."
    }
  ],
  "soft_constraints": [],
  "global_objective": ""
}